<html>
    <head>
        <title>game</title>
        <link rel="stylesheet" href="/stylesheets/style.css" />
    </head>
    <body>
        <%- include('partials/navbar.ejs') %>

        <div class="outsideContainer">
            <div class="container">
                <h1>Welcome <%= user%></h1>
                <div class="lobby">
                    <h2>create lobby</h2>
                    <form action="/lobby/create" method="POST">
                        <div>
                            <label for="lobby-name">name:</label>
                            <input
                                type="text"
                                id="lobby-name"
                                name="name"
                                required
                            />
                        </div>
                        <div>
                            <label for="max-players">players:</label>
                            <input
                                type="number"
                                id="max-players"
                                name="maxPlayers"
                                value="4"
                            />
                        </div>
                        <button type="submit">Create</button>
                    </form>
                </div>
            </div>
        </div>
    </body>
</html>
